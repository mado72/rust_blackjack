{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // ============================================
        // üöÄ FULL STACK CONFIGURATIONS
        // ============================================
        {
            "name": "üöÄ Launch Full Stack (Backend + Frontend)",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin=blackjack-api",
                    "--package=blackjack-api",
                    "--manifest-path=api/Cargo.toml"
                ]
            },
            "args": [],
            "preLaunchTask": "Start Frontend Dev Server"
        },
        // ============================================
        // ü¶Ä BACKEND (RUST) CONFIGURATIONS
        // ============================================
        {
            "name": "ü¶Ä Launch Backend API (blackjack-api)",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin=blackjack-api",
                    "--package=blackjack-api",
                    "--manifest-path=api/Cargo.toml"
                ]
            },
            "args": []
        },
        {
            "name": "ü¶Ä Launch CLI (blackjack-cli)",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin=blackjack-cli",
                    "--package=blackjack-cli",
                    "--manifest-path=api/Cargo.toml"
                ]
            },
            "args": []
        },
        // ============================================
        // ‚öõÔ∏è FRONTEND (REACT) CONFIGURATIONS
        // ============================================
        {
            "name": "‚öõÔ∏è Launch Frontend in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            },
            "preLaunchTask": "Start Frontend Dev Server"
        },
        {
            "name": "‚öõÔ∏è Launch Frontend in Edge",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            },
            "preLaunchTask": "Start Frontend Dev Server"
        },
        {
            "name": "‚öõÔ∏è Attach to Frontend (Chrome)",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        },
        // ============================================
        // üß™ BACKEND TEST CONFIGURATIONS
        // ============================================
        {
            "name": "üß™ Debug unit tests in library 'blackjack_core'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--package=blackjack-core",
                    "--manifest-path=api/Cargo.toml"
                ]
            }
        },
        {
            "name": "üß™ Debug integration test 'integration_tests'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--test=integration_tests",
                    "--package=blackjack-core",
                    "--manifest-path=api/Cargo.toml"
                ]
            }
        },
        {
            "name": "üß™ Debug unit tests in library 'blackjack_service'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--package=blackjack-service",
                    "--manifest-path=api/Cargo.toml"
                ]
            }
        },
        {
            "name": "üß™ Debug integration test 'service_tests'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--test=service_tests",
                    "--package=blackjack-service",
                    "--manifest-path=api/Cargo.toml"
                ]
            }
        },
        {
            "name": "üß™ Debug unit tests in library 'blackjack_api'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--package=blackjack-api",
                    "--manifest-path=api/Cargo.toml"
                ]
            }
        },
        {
            "name": "üß™ Debug unit tests in executable 'blackjack-api'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--bin=blackjack-api",
                    "--package=blackjack-api",
                    "--manifest-path=api/Cargo.toml"
                ]
            }
        },
        {
            "name": "üß™ Debug integration test 'api_tests'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--test=api_tests",
                    "--package=blackjack-api",
                    "--manifest-path=api/Cargo.toml"
                ]
            }
        },
        {
            "name": "üß™ Debug unit tests in executable 'blackjack-cli'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--bin=blackjack-cli",
                    "--package=blackjack-cli",
                    "--manifest-path=api/Cargo.toml"
                ]
            }
        }
    ]
}